<h3 class="text-center">Buscar artista</h3>

<div class="col-md-10 offset-md-1 text-center">
	<%= form_tag artists_path, method: :get do %>
		<div class="form-group mb-3">
			<%= text_field_tag :search, nil, class: 'form-control', placeholder: 'Buscar artista' %>
		</div>

		<%= submit_tag 'Buscar', class: 'btn btn-primary mb-5' %>
	<% end %>

	<% unless @artists.blank? %>
		<div class="row">
			<% @artists.each do |artist| %>
				<div class="col-md-4 col-sm-6">
					<div class="card" style="height: 35rem; margin-bottom: 2em;">
						<%= image_tag artist.images&.last&.fetch('url') || 'https://via.placeholder.com/160x160', class: "card-img-top", alt: 'https://via.placeholder.com/160x160' %>
						<div class="card-body">
							<h5 class="card-title"><%= artist.name %></h5>
							<%= link_to 'Ver artista', "/artists/#{artist.id}", class: 'btn btn-info' %>
						</div>
					</div>	
				</div>
			<% end %>
		</div>
	<% end %>
</div>
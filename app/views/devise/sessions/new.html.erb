<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="text-center my-5">
          <%= image_tag 'logo', alt: 'logo', width: 200 %>
        </div>   
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold mb-4">Ingresa a tu cuenta</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <br>
              <div class="mb-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo electronico" %>
                <div class="invalid-feedback">
                  Correo invalido
                </div>
              </div>
              <br>
              <div class="mb-3">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña" %>

                <div class="invalid-feedback">
                  Contraseña requerida
                </div>
              </div>
              <br>    
              <div class="button" style="margin-left: 30%;">
                <div class="actions">
                  <%= f.submit "Ingresar", class: "btn btn-primary ms-auto" %>
                </div>
              </div>
              <br>
              <div>
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label 'Recordarme' %>
                <% end %>
              </div>
              <br>
              <div class="row">
                <%= link_to 'Olvidaste tu contraseña?', new_user_password_path %>
              </div>
            <% end %>
          </div>
          <div class="card-footer py-3 border-0">
            <div class="text-center">
              No tienes cuenta?  
              <%= link_to 'Crear una cuenta', new_user_registration_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

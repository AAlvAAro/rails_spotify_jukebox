<div class="col-md-10 offset-md-1 text-center">
	<% if @playlists.any? %>
		<h4 class="mb-5">Mis playlists:</h4>

		<div class="row mb-5">
			<% @playlists.each do |playlist| %>
				<div class="col-md-4 col-sm-6">
					<div class="card" style="height: 30rem; margin-bottom: 1em;">
						<%= image_tag playlist.images.first['url'], class: "card-img-top", alt: 'https://via.placeholder.com/160x160' %>
						<div class="card-body text-center">
							<h5 class="card-title"><%= playlist.name %></h5>
							<p><b>Descripcion: </b><%= playlist.description %></p>
							<%= link_to 'Ver playlist', playlist_path(playlist.id), class: 'btn btn-success' %>
						</div>
					</div>	
				</div>
			<% end %>
		</div>
	<% end %>
</div>
